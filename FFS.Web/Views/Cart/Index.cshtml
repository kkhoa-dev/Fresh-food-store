
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/Scripts/cart.js"></script>
    <script>
        var cartController = new CartController();
        cartController.initialize();
    </script>
}
@{
    var culture = CultureInfo.CurrentCulture.Name;
}
<div class="container">
    <div id="panel-cart">
        <table id="tbl_cart" class="table table-bordered">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Mô tả</th>
                    <th>Số lượng</th>
                    <th>Giá tiền</th>
                    <th>Tổng cộng</th>
                </tr>
            </thead>
            <tbody id="cart_body">
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" style="text-align:right"><strong>Thành tiền =</strong></td>
                    <td class="label label-important" style="display:block"> <strong> <span id="lbl_total"></span> </strong></td>
                </tr>
            </tfoot>
        </table>
        <a href="/@culture/Cart/Checkout" class="btn btn-success">Tiếp theo <i class="icon-arrow-right"></i></a>
    </div>
</div>

